<% if(@weight_price_id.errors.any?) %>
  <div class="alertField">
    <div class = "alert alert-warning">
    <p>Verifique os erros abaixo:</p>
    <% @weight_price_id.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </div>
  </div>
<% end %>

<%= form_for [@modality, @weight_price_id ] do |f| %>

   <div class="container-form-modality">
        <div class="form-group col-md-6">
        <%= f.label :initial_weight %>
        <%= f.text_field :initial_weight, { class: "form-control", placeholder: "Peso inicial" } %>
        </div>
        <div class="form-group col-md-6">
        <%= f.label :final_weight %>
        <%= f.number_field :final_weight, { class: "form-control", placeholder: "Peso final" } %>
        </div>
        <div class="form-group col-md-6">
        <%= f.label :weight_rate %>
        <%= f.number_field :weight_rate, { class: "form-control", placeholder: "Valor por Km (R$)" } %>
        </div>
        
        <div class="btn-form-modality">
        <%= f.submit 'Gravar', class: "btn btn-primary" %>
        </div>
    </div>

<% end %>



