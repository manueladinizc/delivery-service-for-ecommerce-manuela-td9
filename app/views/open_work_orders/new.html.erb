<%= form_with(model: [@work_order, @open_work_order]) do |f| %>

   <div class="container-form-modality">
        <div class="form-group col-md-6">
        <%= f.label :modality_id %>
        <%= f.collection_select :modality_id, @modalities, :id, :name, { class: "form-control" } %>
        </div>  

        <div class="form-group col-md-6">
        <%= f.label :distance_price_id %>
        <%= f.collection_select :distance_price_id, @distance_prices, :id, :distance_rate, { class: "form-control" } %>
        </div>        
        
        <div class="form-group col-md-6">
        <%= f.label :weight_price_id %>
        <%= f.collection_select :weight_price_id, @weight_prices, :id, :weight_rate, { class: "form-control" } %>
        </div>
        
        <div class="form-group col-md-6">
        <%= f.label :deadline_id %>
        <%= f.collection_select :deadline_id, @deadlines, :id, :duration, { class: "form-control" } %>        
        </div>                  
      
       <div class="form-group col-md-6">
        <%= f.label :total_price %>
        <%= f.number_field :total_price, { class: "form-control" } %>        
        </div>
      
      <br>
        <div class="btn-form-modality">        
        <%= f.submit 'Iniciar', class: "btn btn-primary" %>
        </div>
    </div>


<% end %>


